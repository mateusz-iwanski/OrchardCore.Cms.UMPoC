@model AuditAnnoucement.ViewModels.AuditAnnoucementPartViewModel

@{
    // Orchard Core automatycznie ustawia HtmlFieldPrefix jako Prefix, np. "AuditAnnoucementPart"
    // Dziêki temu asp-for wygeneruje poprawne name="AuditAnnoucementPart.X"
}

<fieldset>
    <legend>Edit Audit Announcement</legend>

    <!-- Pole tylko do odczytu: CreatedBy -->
    <div class="form-group">
        <label asp-for="CreatedBy">Created By</label>
        <input asp-for="CreatedBy" class="form-control" readonly />
    </div>

    <!-- Pole tylko do odczytu: CreatedUtc -->
    <div class="form-group">
        <label asp-for="CreatedUtc">Created Date</label>
        <input asp-for="CreatedUtc" type="datetime-local" class="form-control" readonly />
    </div>

    <!-- Pole tylko do odczytu: ModifiedBy -->
    <div class="form-group">
        <label asp-for="ModifiedBy">Modified By</label>
        <input asp-for="ModifiedBy" class="form-control" readonly />
    </div>

    <!-- Pole tylko do odczytu: ModifiedUtc -->
    <div class="form-group">
        <label asp-for="ModifiedUtc">Modified Date</label>
        <input asp-for="ModifiedUtc" type="datetime-local" class="form-control" readonly />
    </div>

    <!-- Pole wyboru: StatusAfterReview -->
    <div class="form-group">
        <label asp-for="StatusAfterReview">Status After Review</label>
        <select asp-for="StatusAfterReview" class="form-control"
                asp-items="Html.GetEnumSelectList<AuditAnnoucement.Models.ReviewStatus>()">
        </select>
    </div>

    <!-- Edytowalne pole: Note.Text zdefiniowane jako TextField w ContentDefinition -->
    <div class="form-group">
        <label asp-for="Note.Text">Note</label>
        <textarea asp-for="Note.Text" class="form-control" rows="4"></textarea>
        <span class="form-text text-muted">A short note related to the announcement.</span>
    </div>
</fieldset>




